@using _2Evaluacion_LabADS.Utilities
@model IEnumerable<_2Evaluacion_LabADS.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear", "Form", new { operacion = Operacion.insertar }, new { @class = "btn btn-primary" })
</p>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nameCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastNameCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emailCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.passwordCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phoneNumber)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nameCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastNameCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emailCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.passwordCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Form", new { id = item.IdCustomer, operacion = Operacion.modificar },
                 new { @class = "btn btn-xs btn-warning" }) |
                    @Html.ActionLink("Detalles/Ver", "Form", new { id = item.IdCustomer, operacion = Operacion.ver },
                    new { @class = "btn btn-xs btn-default" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCustomer, operacion = Operacion.eliminar },
                    new { @class = "btn btn-xs btn-danger eliminar" })
                </td>
            </tr>
        }

    </table>
}
else
{<h4 class="text-center">No hay datos.</h4>}
