@using _2Evaluacion_LabADS.Utilities
@model IEnumerable<_2Evaluacion_LabADS.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear", "Form", new { operacion = Operacion.insertar }, new { @class = "btn btn-primary" })
</p>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdStore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdStore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Form", new { id = item.IdProduct, operacion = Operacion.modificar },
                    new { @class = "btn btn-xs btn-warning" }) |
                    @Html.ActionLink("Detalles/Ver", "Form", new { id = item.IdProduct, operacion = Operacion.ver },
                    new { @class = "btn btn-xs btn-default" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdProduct, operacion = Operacion.eliminar },
                    new { @class = "btn btn-xs btn-danger eliminar" })
                </td>
            </tr>
        }

    </table>
}
else
{<h4 class="text-center">No hay datos.</h4>}