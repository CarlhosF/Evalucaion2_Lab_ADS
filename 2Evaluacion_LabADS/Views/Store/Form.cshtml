@model _2Evaluacion_LabADS.Models.Store

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="operacion" value="@ViewData["Operacion"]" />

    <input type="hidden" id="_redirectURL" value="@Url.Action("Index","Carreras")" />

    <div class="form-horizontal">
        <h4>Store</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdStore, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdStore, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdStore, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("REGRESAR", "Index", new { @class = "btn btn-default btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>

$(document).ready(function () {
//DESHABILITAR LOS CONTROLES DEL FORMULARIO, CUANDO LA OPERACION ES "ver"
if ($("#operacion").val() == "ver") {
$("form").find("input,select").attr("disabled", true);
}

//Agregando la clase form-ajax
//La cual activa el formulario para trabajar con AJAX
$("form").addClass("form-ajax");
//Activar AJAX
initAjaxForm();
});
</script>
}
